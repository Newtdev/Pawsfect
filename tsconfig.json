{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "moduleResolution": "bundler",
    "types": ["react-native", "react", "node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/shared/hooks/*"],
      "@navigator/*": ["./src/navigator/*"],
      "@shared/*": ["./src/shared/*"],
      "@features/*": ["./src/features/*"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/shared/utils/*"],
      "@types": ["./src/shared/types/index.ts"]
    },
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "babel.config.js",
    "declaration.d.ts",
    "__tests__/Chip.test.tsx",
    "src/shared/__test__/useDebounceFunction.test.ts",
    "src/shared/__test__/useClipboard.test.ts"
  ]
}
